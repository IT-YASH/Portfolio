    <style>
      * {
        margin: 0;
        padding: 0%;
      }

      body {
        font-family: "Roboto Slab", serif;
        background-color: white;
        color: black;
      }

      nav {
        font-size: 20px;
        display: flex;
        justify-content: space-around;
        align-items: center;
        height: 70px;
        width: 100%;
        top: 0%;
        background-color: black;
      }

      nav .left {
        color: white;
      }

      nav ul {
        display: flex;
        justify-content: center;
      }

      nav ul li {
        list-style: none;
        margin: 4px 23px;
      }

      nav ul li a {
        position: relative;
        color: white;
        text-decoration: none;
      }

      nav ul li a::before {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        height: 2px;
        background-color: white;
        transition: width 0.3s ease-in-out;
        width: 0;
      }

      nav ul li a:hover::before {
        width: 100%;
      }

      .left {
        font-size: 22px;
        text-align: left;
      }

      .firstsection {
        display: flex;
        justify-content: space-around;
        margin: 40px 0px;
        align-items: center;
      }

      .firstsection > div {
        width: 30%;
      }

      .middle {
        height: 450px;
        width: 3px;
        background-color: black;
      }

      .leftsection {
        font-size: 2rem;
      }

      .leftsection .btn {
        padding: 10px;
        cursor: pointer;
        border-radius: 15px;
        color: white;
        background-color: black;
      }

      .rightsection img {
        width: 95%;
        margin: 49px 4px;
        border-radius: 50%;
        border: 3px solid black;
        padding: 3px;
      }

      .black {
        color: grey;
      }

      .txtblack {
        color: grey;
      }

      #element {
        color: grey;
      }

      .secondsection {
        max-width: 80vw;
        margin: 2% 9%;
        font-size: small;
        height: 100%;
      }

      .grid-container {
        margin-top: 30px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
      }

      .card-container {
        perspective: 1000px;
        width: 100%;
        height: 200px;
      }

      .card {
        position: relative;
        width: 100%;
        height: 100%;
        transform-style: preserve-3d;
        transition: transform 0.5s;
      }

      .front,
      .back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        box-sizing: border-box;
      }

      .front {
        background-color: #f5f5f5;
        z-index: 2;
      }

      .back {
        background-color: black;
        transform: rotateY(180deg);
      }

      h2 {
        color: white;
        margin-bottom: 10px;
      }

      p {
        color: white;
        font-size: 16px;
      }

      footer {
        background-color: black;
        color: white;
        padding: 20px;
        text-align: center;
      }

      .footer-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .socialmedia ul {
        list-style-type: none;
        padding: 10px;
        margin: 0;
      }

      .socialmedia ul li {
        display: inline-block;
        margin-right: 10px;
      }

      .socialmedia ul li:last-child {
        margin-right: 0;
      }

      .socialmedia ul li a i {
        color: white;
        font-size: 20px;
      }

      .footer-right {
        flex-grow: 1;
        margin-left: 20px;
        text-align: center;
      }
    </style>
  </head>
